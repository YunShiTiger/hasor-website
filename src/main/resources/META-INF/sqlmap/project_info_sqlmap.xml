<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sp_project_info_space">

    <resultMap id="projectInfoDOMap" type="net.demo.hasor.domain.ProjectInfoDO">
        <result property="id"               column="id"/>
        <result property="ownerID"          column="owner_id"/>
        <result property="organizationID"   column="organization_id"/>

        <result property="name"             column="name"/>
        <result property="subtitle"         column="subtitle"/>
        <result property="present"          column="present"/>
        <result property="contentFormat"    column="present_format" typeHandler="net.demo.hasor.domain.convert.ContentFormatConvert"/>

        <result property="homePage"         column="home_page"/>
        <result property="downPage"         column="down_page"/>
        <result property="sourceType"       column="type"           typeHandler="net.demo.hasor.domain.convert.SourceTypeConvert"/>
        <result property="language"         column="language"/>
        <result property="license"          column="license"/>
        <result property="futures"          column="futures"        typeHandler="net.demo.hasor.domain.convert.ProjectFuturesConvert"/>

        <result property="createTime"       column="create_time"/>
        <result property="modifyTime"       column="modify_time"/>
    </resultMap>

    <sql id="projectInfoDO_allColumns">
        id,
        owner_id,
        organization_id,
        name,
        subtitle,
        present,
        present_format,
        home_page,
        down_page,
        type,
        language,
        license,
        futures,
        create_time,
        modify_time
	</sql>

    <!-- 新增外部登录 -->
    <insert id="projectInfo_insert" parameterType="net.demo.hasor.domain.ProjectInfoDO">
        insert into PROJECT_INFO(
            owner_id,
            organization_id,
            name,
            subtitle,
            present,
            present_format,
            home_page,
            down_page,
            type,
            language,
            license,
            futures,
            create_time,
            modify_time
        ) values(
            #{ownerID},
            #{organizationID},
            #{name},
            #{subtitle},
            #{present},
            #{contentFormat, typeHandler=net.demo.hasor.domain.convert.ContentFormatConvert},
            #{homePage},
            #{downPage},
            #{sourceType, typeHandler=net.demo.hasor.domain.convert.SourceTypeConvert},
            #{language},
            #{license},
            #{sourceType, typeHandler=net.demo.hasor.domain.convert.ProjectFuturesConvert},
            now(),
            now()
        );
        <selectKey keyProperty="id" resultType="long">
            select LAST_INSERT_ID() as value
        </selectKey>
    </insert>

    <!-- 根据项目ID获取项目 -->
    <select id="projectInfo_queryByID" resultMap="projectInfoDOMap">
        select
            <include refid="projectInfoDO_allColumns"/>
        from
            PROJECT_INFO
        where
            id = #{id}
        limit 1
    </select>

    <!-- 根据项目owner获取项目列表 -->
    <select id="projectInfo_queryByOwner" resultMap="projectInfoDOMap">
        select
            <include refid="projectInfoDO_allColumns"/>
        from
            PROJECT_INFO
        where
            owner_id = #{ownerID}
        order by
            create_time desc 
    </select>
</mapper>